<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Archetype Created Web Application</display-name>
    <context-param>
        <param-name>db</param-name>
        <param-value>db.properties</param-value>
    </context-param>
    <context-param>
        <param-name>fileUploadPath</param-name>
        <param-value>/bookUpload</param-value>
    </context-param>
    <context-param>
        <param-name>mailConfig</param-name>
        <param-value>mail.properties</param-value>
    </context-param>
    <context-param>
        <param-name>log4j2</param-name>
        <param-value>log4j2.properties</param-value>
    </context-param>
    <welcome-file-list>
        <welcome-file>MainPage.jsp</welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/500.jsp</location>
    </error-page>
    <jsp-config>
        <taglib>
            <taglib-uri>customtag</taglib-uri>
            <taglib-location>/WEB-INF/tld/custom.tld</taglib-location>
        </taglib>
    </jsp-config>
    <listener>
        <listener-class>com.itechart.javalab.library.controller.listener.ConnectionPoolListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.itechart.javalab.library.controller.listener.MailConfigListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.itechart.javalab.library.controller.listener.EmailNotificationListener</listener-class>
    </listener>
</web-app>

